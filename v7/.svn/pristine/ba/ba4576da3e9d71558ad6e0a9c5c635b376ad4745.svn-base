@charset "gb2312";
/* CSS Document */

/*M_points*/
.M_points{
	color:#333;
	overflow:hidden;
	margin-top:23px;
	padding:0 20px 30px;
	border-bottom:1px dashed #b2b2b2;
}

.M_points .Title{
	height:46px;
	line-height:46px;
	margin-bottom:23px;
}
.M_points .Title .lk_a{
	color:#333;
	font-size:34px;
}
.M_points .Title .lk_a:hover{
	color:#d33a2e;
	text-decoration:underline;
}
.M_points .pCont{
	display:block;
	overflow:hidden;
	zoom:1;
}
.M_points .pCont_dt{
	width:96px;
	height:96px;
	float:left;
	border:2px solid #d33a2e;
	display:inline-table;
}
.M_points .pCtit{
	width:76px;
	height:96px;
	color:#d33a2e;
	line-height:30px;
	text-align:center;
	padding:0 10px;
	display:table-cell;
	vertical-align:middle;
}
.M_points .pCtit span{
	font-size:24px;
	display:block;
}
.M_points .pCtit .sp_2{
	font-size:18px;
}
.M_points .pCont_dd{
	width:820px;
	float:right;
	padding-left:23px;
	
}
.M_points .pCtxt{
	width:758px;
	font-size:14px;
	line-height:24px;
	padding:10px 30px 20px;
	border:1px solid #dadada;
	word-spacing: normal;
  word-wrap: break-word;
	background-color:#fafafa;
	position:relative;
}
.M_points .pCtxt .icon{
	width:24px;
	height:18px;
	display:block;
	overflow:hidden;
	background:url(../../images/txtbg.png) no-repeat left top;
	_background-image:url(../../images/txtbg.gif);
	position:absolute;
	left:-24px;
	top:30px;
}
.M_points .pCtxt .name{
	font-size:16px;
	margin-bottom:5px;
}
.M_points .pCtxt .name,
.M_points .pCtxt .name a{ color:#d33a2e;}



.M_points .pCbtn{
	width:144px;
	height:41px;
	line-height:40px;
	text-align:center;
	overflow:hidden;
	margin-top:10px;
}
.M_points .pCbtn .lk_a{
	color:#FFF;
	display:block;
	font-size:16px;
	border:1px solid #d33a2e;
	background:#d33a2e;
}
.M_points .pCbtn .lk_a:hover{
	color:#FFF;
	text-decoration:none;
	background:#bd3429;
}
.M_points .pCbtn .lk_a .icon{
	width:21px;
	height:10px;
	display:inline-block;
	margin-left:22px;
	overflow:hidden;
	background:url(../../images/btnbg.png) no-repeat left top;
	_background-image:url(../../images/btnbg.gif);
}
.M_points .pCbtn .lk_a.cur .icon{
	background-position:right top;
}


.M_points .pretation{
	width:778px;
	overflow:hidden;
	padding:30px 20px;
	border:1px solid #dadada;
	background-color:#fafafa;
	zoom:1;
}
.M_points .pretation .userinfo{
	width:308px;
	height:89px;
	font-size:14px;
	line-height:20px;
	padding:0 16px 0 108px;
	background-color:#FFF;
}
.M_points .pretation .userinfo .img{
	float:left;
	margin-left:-108px;
}
.M_points .pretation .userinfo .img,
.M_points .pretation .userinfo .img img{
	width:89px;
	height:89px;
}
.M_points .pretation .userinfo .name{
	font-size:16px;
	padding:12px 0 5px;
}
.M_points .pretation .userinfo .lk_a,
.M_points .pretation .userinfo .lk_a:hover{
	color:#d33a2e;
}
.M_points .pretation .userinfo .lk_a:hover{
	text-decoration:underline;
}
.M_points .pretation .video{
	width:432px;
	height:243px;
	overflow:hidden;
	margin-top:20px;
	position:relative;
}

.M_points .video .v-tit{
	width:100%;
	height:40px;
	color:#FFF;
	font-size:14px;
	line-height:40px;
	text-align:center;
	background:#c3c3c3;
	background:rgba(0,0,0,.6);
	position:absolute;
	left:0;
	bottom:0;
}
.M_points .video .v-tit .lk_a,
.M_points .video .v-tit .lk_a:hover{ color:#FFF;}
.M_points .video .v-tit .lk_a:hover{ text-decoration:underline;}
.M_points .video .v-btn{
	position:absolute;
	left:17px;
	bottom:50px;
}
.M_points .video .v-btn,
.M_points .video .v-btn .lk_a{
	width:42px;
	height:42px;
}
.M_points .video .v-btn .lk_a{
	display:block;
	background:url(../../images/vplay.png) no-repeat left top;
	_background-image:url(../../images/vplay.gif);
}
.M_points .pretation .prettxt{
	width:316px;
	float:right;
	font-size:14px;
	line-height:28px;
	margin-top:-354px;
}
.M_points  .prettxt .tit{
	font-size:24px;
	margin-bottom:20px;
}
.M_points  .prettxt .txt p{
	text-indent:2em;
}
.M_points  .prettxt .txt .lk_a{
	color:#d33a2e;
}
.M_points .pretation-max .video{
	width:100%;
	height:440px;
}
.M_points .pretation-max .prettxt{
	width:100%;
	margin-top:28px;
}


























