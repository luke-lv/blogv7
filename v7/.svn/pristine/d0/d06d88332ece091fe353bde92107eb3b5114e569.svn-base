@charset "utf-8";
/*公用*/
.wrap .ntopbar_ad a, .ntopbar_ad a:hover,
.wrap .ntopbar_login a.register:hover,a:hover{ color:#b658bd;}
.m_ellps{white-space: nowrap;overflow: hidden;text-overflow: ellipsis;}
.sakura_title{ font-size:28px; color:#000; margin-bottom:20px;}
.sakura_title .name{ margin-right:10px;}
.sakura_title .flower{ display:inline-block; margin-bottom:-6px; width:65px; height:30px; background:url(../../../images/activity/travel/title.jpg) no-repeat;}
.wrap{ background:#fff;}
.sakura{ width:1000px; margin:0 auto;}
/*两个通栏广告位*/
.location_ad1{ width:100%; margin-bottom:40px;}
.location_ad2{ width:100%; margin-bottom:40px;}
/*玩转日本赏花*/
.sakura_play{ margin-bottom:40px;}
.sakura_news{ overflow:hidden; zoom:1; height:300px;}
.rslides{ width:620px; height:300px; overflow:hidden; position:relative; float:left;}
.rslides_img{ width:100000px;}
.rslides_img li{ float:left; width:620px; height:300px; position:relative;}
.rslides_img img{width:620px; height:300px;}
.rslides_img .des{ position:absolute; height:40px; line-height:40px; left:0; bottom:0; font-size:16px; color:#fff; padding-left:10px; background:url(../../../images/activity/travel/bg.png) repeat-x left top; _background-color:#000; width:610px;}
.rslides_point{ overflow:hidden; height:26px; zoom:1; position:absolute; right:0; bottom:0; padding-top:14px;}
.rslides_point li{ float:left; margin-right:10px; height:12px; overflow:hidden;}
.rslides_point a{ display:block; width:12px; height:12px; background:url(../../../images/activity/travel/point.png) no-repeat 0 -15px;_background:url(../../../images/activity/travel/point.gif) no-repeat 0 -15px;}
.rslides_point a:hover,.rslides_point .cur a{background:url(../../../images/activity/travel/point.png) no-repeat 0 0;_background:url(../../../images/activity/travel/point.gif) no-repeat 0 0;}
.news_list{ width:360px; height:300px; float:right; overflow:hidden;}
.news_list .news_top{max-height:149px; overflow:hidden;}
.news_list .p1{ font-size:20px;  margin-bottom:10px; width:100%;}
.news_list .p1 a{color:#000;}
.news_list .p2{ font-size:14px; color:#999; line-height:23px; margin-bottom:15px;*margin-bottom:14px;}
.news_list .p2 a{color:#999;}
.news_list p a:hover{ color:#b658bd;}
.news_list .p3{ font-size:14px;}
.news_list .news_bottom { height:140px;margin-top:10px; border-top:1px solid #f6f6f6;}
.news_list .news_bottom ul{  padding:13px 0;}
.news_list .news_bottom li{ background:url(../../../images/activity/travel/list.jpg) no-repeat left center; padding-left:10px; width:100%;}
.news_list .news_bottom li a{ font-size:17px; line-height:28px;}
.news_list .btn{ height:30px; margin-right:-12px;}
.news_list .btn a{ display:block; height:30px; line-height:30px; background-color:#9fbdff; color:#fff; text-align:center; font-size:14px; width:174px; float:left; margin-right:12px;}
.news_list .btn .weibo{ background:url(../../../images/activity/travel/weibo.png) no-repeat 39px center #9fbdff; padding-left:28px; width:146px;_background-image:url(../../../images/activity/travel/weibo.gif);}
.news_list .btn a:hover{ background-color:#7fa7ff;}
/*赏樱花地点推荐*/
.sakura_box .tab ul{ overflow:hidden; zoom:1; height:39px; line-height:39px; border-bottom:1px solid #eee; margin-bottom:26px;}
.sakura_box .tab li{ float:left; _width:79px; _text-align:center;}
.sakura_box .tab a{ display:block; height:39px; line-height:39px; padding:0 14px; font-size:17px;background:#fff;}
.sakura_box .tab .cur{ color:#fff; background:#e699ec;}
.tab_box .hidden{ display:none;}
.tab_con{ overflow:hidden;zoom:1;}
.sakura_con{ width:620px; float:left; border-right:1px solid #eee; padding-right:20px;}
.sakura_box .BNE_blog_feed{ margin-top:-26px;}
.sides{ width:340px; float:right; overflow:hidden;}
.side{ margin-bottom:25px; width:340px;}
.side .title{ font-size:20px; height:30px; border-bottom:1px solid #eee; margin-bottom:15px; color:#000;}
.side .line{ display:inline-block; height:30px; border-bottom:1px solid #e699ec; margin-bottom:-1px;}
.side ul{ margin:0 -16px -15px 0; overflow:hidden; zoom:1;}
.side li{ width:162px; height:135px; float:left; margin:0 16px 5px 0;}
.side li .pic{width:162px; height:100px; overflow:hidden;}
.side li img{ width:162px; height:100px;transition: transform 0.3s ease;-webkit-transition: -webkit-transform 0.3s ease;-moz-transition: -moz-transform 0.3s ease;-ms-transition: -ms-transform 0.3s ease;}
.side li img:hover{-webkit-transform: scale(1.1);-moz-transform: scale(1.1);-ms-transform: scale(1.1);transform: scale(1.1);}
.side li p{height:35px; line-height:35px; font-size:14px; color:#333; width:100%;}
.side5{ margin-top:20px;}
/*底部*/
.footer {text-align: center; width:1000px; margin:40px auto 0;border-top: 1px solid #eee;color: #5a6b7b;line-height: 26px;padding: 25px 0 60px;}
.footer a{color: #5a6b7b;}
.footer a:hover{color: #b658bd;}