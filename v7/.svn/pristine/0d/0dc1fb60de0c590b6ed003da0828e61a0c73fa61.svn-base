@charset "gb2312";
/* CSS Document */

/*ÏÖ³¡Ä£¿é*/
.M_spot{width:1000px;margin:0 auto;}
.M_spot .arr_l,
.M_spot .arr_r{width:25px;height:633px;background-color:#000;position:relative;}
.M_spot .arr_l:hover,
.M_spot .arr_r:hover{background-color:#d33a2e;}

.M_spot .arr_l{float:left;_margin-right:-3px;}
.M_spot .arr_r{float:right;_margin-left:-3px;}
.M_spot .arr_icon_l{display:block;width:11px;height:22px;background:url("http://www.sinaimg.cn/dy/2015/lh2015/lianghui_video/arrow.png") no-repeat;_background:url("http://www.sinaimg.cn/dy/2015/lh2015/lianghui_video/arrow.gif") no-repeat;background-position: 0 -23px;position:absolute;top:50%;margin-top:-11px;left:50%;margin-left:-5px;}
.M_spot .arr_icon_r{display:block;width:11px;height:22px;background:url("http://www.sinaimg.cn/dy/2015/lh2015/lianghui_video/arrow.png") no-repeat;_background:url("http://www.sinaimg.cn/dy/2015/lh2015/lianghui_video/arrow.gif") no-repeat;background-position: 0 0 ;position:absolute;top:50%;margin-top:-11px;right:50%;margin-right:-5px;}
.M_spot .spot_list_con{width:950px;overflow:hidden;*zoom:1;}
.M_spot .spot_list{height:633px;width:9500px;}
.M_spot .spot_list .list_item{float:left;}
.M_spot .spot_list .list_item .spot_a{width:950px;height:633px;display:block}
.M_spot .spot_list .list_item .spot_a .spot_img{width:100%;height:100%;display:block}
.M_spot .slide_dot{margin-top:15px;text-align:center;}
.M_spot .slide_dot .dot_item{display:inline-block;margin-right:13px;*display:inline;*zoom:1;}
.M_spot .slide_dot .dot_item .small_dot{width:12px;height:12px;border-radius:12px;display:block;background-color:#d3d3d3;}
.M_spot .slide_dot .dot_item .small_dot:hover{background-color:#d33a2e;}
.M_spot .slide_dot .dot_item .cursor{background-color:#d33a2e;}



