@charset "gb2312";
/* CSS Document */

/*top_focus*/
.top_focus { overflow: hidden; zoom: 1; position: relative; }
.index_b_hero { width: 1000px; height: 540px; margin: 0 auto; position: relative; }
.index_b_hero .heros { width: 1000px; height: 540px; }
.index_b_hero .hero-wrap { overflow: visible; position: absolute; }
.index_b_hero .mask-left, .index_b_hero .mask-right, .index_b_hero .hero { background: #fff; z-index: 1; position: absolute; top: 0; left: 0; width: 1000px; height: 540px; overflow: hidden; left: 2000px; }
.index_b_hero .hero img { width: 100%; height: 540px; }
.index_b_hero .mask-right, .index_b_hero .mask-left { z-index: 4; left: -1000px; filter: alpha(Opacity=50); opacity: .5; background: #000; overflow: hidden; }
.index_b_hero .mask-right { left: 1000px; }
.index_b_hero .active { z-index: 2; left: 0; }
.top_focus .prev, .top_focus .next { width: 34px; height: 70px; display: block; position: absolute; z-index: 50; top: 236px; background-image: url(../../images/common/arrow.png); background-position: center top; background-repeat: no-repeat; }
.top_focus .prev { left: -50px; background-position: center bottom; }
.top_focus .next { right: -50px; }
.top_focus .prev:hover, .top_focus .next:hover { opacity: .5; }
.top_focus .bottomtitle { position: absolute; left: 0; bottom: 0px; width: 1000px; height: 50px; background-color: #000; background-color: rgba(0,0,0,.9); z-index: 111; }
.top_focus .title { position: absolute; left: 0; z-index: 111; font-size: 24px; color: #ccc; text-indent: 40px; line-height: 50px; }
.top_focus .title span { display: inline-block; }
.top_focus .srcoll { width: 144px; height: 10px; padding: 9px 0; z-index: 111; line-height: 10px; position: absolute; right: 30px; bottom: 10px; text-align: center; }
.top_focus .srcoll span { display: inline-block; width: 10px; height: 10px; margin: 0 10px; border: 1px solid #ccc; cursor: pointer; }
.top_focus .srcoll span.cur { background-color: #d23a2d; border: 1px solid #d23a2d; }
