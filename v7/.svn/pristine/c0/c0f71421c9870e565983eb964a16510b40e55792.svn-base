line-height:30px\9; padding:0px 18px 5px 18px\9; background:url(../../images/common/editor/editor_bg2.png) no-repeat right -33px;}
.flwarp .btn .editBtn2:hover{ background-position:left -67px; text-decoration:none}
.flwarp .btn .editBtn2:hover cite{ background-position:right -101px;}
