@charset "gb2312";
/*头部导航*/
.Mininav{ width:100%; height:60px; background:#fff; position:fixed; z-index:9999;-webkit-box-shadow:1px 1px 10px #eceae8;box-shadow:1px 1px 10px #eceae8; border-bottom:1px solid #f2f1ef;top:0;}
.top-nav{width: 1000px;margin: 0 auto;height: 60px;}
.tn-left{float: left; }
.tn-left a.logo,.Mininav .timeline-time li{float: left;}
.tn-left a.logo{display:block; width:140px; height:60px; background: url(http://www.sinaimg.cn/dy/2015/lh2015/lianghui_pic/logotop.png) no-repeat left 9px;  background-size:100%;}
.tn-left a.title {float: left;border-left: 1px solid #b39d6e;height:32px;line-height: 33px;font-size: 20px;padding-left: 20px; margin-left: 20px; color: #000; margin-top:14px;}
.tn-left a.title:hover{ color:#d33a2e; text-decoration:none;}
.tn-right{float: right;width:80px;}
.tn-right .bshare-custom{ width: 27px;height: 60px; float: left; line-height: 200px;overflow: hidden;margin-right: 25px; cursor: pointer;}
.tn-right .bshare-custom.icon-medium a.bshare-more.more-style-addthis{ width: 27px;height: 60px; float: left; background:url(http://www.sinaimg.cn/dy/2015/lh2015/lianghui_pic/top_commit.png) no-repeat center; cursor: pointer; padding: 0px !important;margin: 0px !important;}
.tn-right .cmnt{width: 28px;height: 60px; float: left; line-height: 200px;overflow: hidden; background: url(http://www.sinaimg.cn/dy/2015/lh2015/lianghui_pic/top_enjoy.png) no-repeat center; cursor: pointer;}

/*背景和各屏取高*/
body,html,.page{ height:100%;}
body{ background:#000 url(../../images/bg.jpg) no-repeat center center fixed;}
.page{width:1000px; margin-left:-500px; position:absolute; left:50%; top:0;/*position:relative;margin:0 auto;*/ }
/*第1屏*/
.page1 .yimo{ width:950px; height:489px; position:absolute; left:50%; top:50%; margin:-240px 0 0 -475px;}
.page1 .yimo1{ background:url(../../images/yimo1.png) no-repeat; height:489px; width:475px; float:left;_background-image:url(../../images/yimo1.gif);}
.page1 .yimo2{ background:url(../../images/yimo2.png) no-repeat; height:489px; width:475px; float:left;_background-image:url(../../images/yimo2.gif);}
/*第2屏*/
.page2 .head{ height:150px; margin-top:60px;}
.page2 .head .logo1{ height:122px; width:115px; background:url(../../images/2015.gif) no-repeat; float:left;}
.page2 .head .logo2{ height:195px; width:328px; background:url(../../images/yimolg.gif) no-repeat; float:left; margin-top:-50px;}
.page2 .title{ text-align:center; margin-bottom:15px; height:45px;}
.page2 .term{ padding:0 12px; margin-right:12px; height:36px; line-height:36px; color:#fff; font-size:18px; display:inline-block; background:#d33a2e; vertical-align:middle;}
.page2 .news{ color:#ccc; font-size:40px; line-height:45px; vertical-align:middle; font-weight:700;}
.page2 .video{ max-width:1000px; margin:0 auto;}
.page2 .btn{ padding:0 36px 0 13px; display:inline-block; height:45px; line-height:45px; color:#fefefe; font-size:20px; background:url(../../images/arrow.jpg) no-repeat 103px 21px #d33a2e; margin:20px 0;}
.page2 .btn:hover{background:url(../../images/arrow.jpg) no-repeat 103px -29px #d33a2e; text-decoration:none;color:#fefefe; }
.page2 .splendid ul{ margin-right:-5px; overflow:hidden; zoom:1;}
.page2 .splendid li{ float:left; width:196px; height:102px; margin-right:5px; position:relative;}
.page2 .splendid li a{ display:block; width:176px; height:72px; padding:15px 10px; background:#1069a1; color:#fff;font-size:14px; line-height:24px;}
.page2 .splendid li a:hover,.page2  .splendid  li .cur{ background:#d33a2e; text-decoration:none; }
.page2 .splendid .time{ position:absolute; right:10px; bottom:5px; cursor:pointer;font-size:12px;}
.page2 .splendid .des{ height:72px; overflow:hidden; display:block; cursor:pointer}
/*第3屏*/
.page3{overflow:hidden;margin-top:60px;}
.page3 .cont{float:left;margin-right:40px;width:560px;background:#f0f0f0;padding:0 50px;}
.page3 .cont h2{font-size:34px;line-height:1.5;font-weight:700;padding-top:50px;} 
.page3 .cont .list{padding-left:80px;background:url(../../images/yaodian.png) no-repeat left 10px;margin:28px 0 30px;}
.page3 .list li{font-weight:700;font-size:16px;line-height:1.9;}
.page3 .line{font-size:16px;color:#555;line-height:1.8;padding-bottom:30px;}
.page3 .line strong{font-weight:700;color:#333;}
.page3 .infrm{float:right;width:250px;background:#f0f0f0;padding:25px 20px 20px 30px;margin-top:30px;}
.page3 .infrm h3{color:#d33a2e;font-size:18px;font-weight:700;margin-bottom:44px;}
.page3 .guests{padding-left:100px;margin-bottom:40px;}
.page3 .guests .head{overflow:hidden;float:left;margin-left:-100px;}
.page3 .guests .tit{font-size:14px;line-height:2;}
.page3 .guests .desc{font-size:14px;color:#666; text-indent:2em;line-height:1.8;}
/*第4屏*/
.page4 .show{ width:1000px; height:257px; position:absolute; left:50%; top:50%; margin:-128px 0 0 -500px;}
.page4 .title{ color:#d33a2e; font-size:32px; font-weight:700; margin-bottom:20px; height:45px;}
.page4 ul{ overflow:hidden; zoom:1;  margin-right:-10px;}
.page4 li{ float:left; width:192px; height:257px; background:#000; margin-right:10px; position:relative;}
.page4 li img{ width:192px; height:192px;}
.page4 .play{ position:absolute; left:10px; top:143px; width:40px; height:40px; background:url(../../images/play2.png) no-repeat;_background:url(../../images/play2.gif) no-repeat;}
.page4 .des{ color:#fff; line-height:22px; font-size:15px; padding:10px 10px; height:45px; overflow:hidden; background:#0d5481;}
.page4 a{opacity:.7;color:#90a6ba;}
.page4 a:hover{ text-decoration:none; opacity:1; color:#fff;}
.page4 a:hover .des{ background:#1069a1;}
/*浮层*/
.M_layer{width:132px;position:fixed;right:0;top:140px;-webkit-backface-visibility: hidden; z-index:100;}	
.M_layer a span{ vertical-align:middle; display:inline-block; width:94px; height:54px; line-height:54px; text-align:center; cursor:pointer;}
.M_layer .nav1{ margin-bottom:1px; font-size:16px;}
.M_layer .nav1 a{ display:block; width:100%; height:54px; line-height:54px; background:#4a525e; color:#fff;}
.M_layer .nav1 .bshare-custom{ font-size:16px;}
.M_layer .nav1 .bshare-custom .bshare-more{ color:#fff!important;}
.M_layer .nav1 a:hover,.M_layer .nav1 .cur{background:#d13c34; text-decoration:none;}
.M_layer .nav2_ul{ display:none;}
.M_layer .nav2{ height:42px; border-top:1px solid #ba2621; font-size:14px;} 
.M_layer .nav2 a{ display:block; height:42px; line-height:42px; color:#fff; background:#d13c34; text-align:center;} 
.M_layer .nav2 a:hover{ background:#ba2621;text-decoration:none;} 
.M_layer .icon{ display:inline-block; width:38px; height:54px; line-height:54px; vertical-align:middle; background-position: center right; background-repeat:no-repeat; cursor:pointer;}
.M_layer .icon1{ background-image:url(../../images/layer1.png);_background-image:url(../../images/layer1ie6.png);}
.M_layer .icon2{ background-image:url(../../images/layer2.png);_background-image:url(../../images/layer2ie6.png);}
.M_layer .icon3{ background-image:url(../../images/layer3.png);_background-image:url(../../images/layer3ie6.png); background-position: 18px center;}
.M_layer .icon4{ background-image:url(../../images/layer4.png);_background-image:url(../../images/layer4ie6.png);}
.M_layer .icon5{ background-image:url(../../images/layer5.png);_background-image:url(../../images/layer5ie6.png);}